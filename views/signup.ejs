<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,700" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href= "/public/assets/signup.css" rel="stylesheet" type="text/css" />
    <link rel="icon" href="/assets/logo2.png">
    <title>Sign Up</title>
</head>
<body>
    <nav id="mainNavbar" class="navbar navbar-dark navbar-expand-md py-0 fixed-top">
        <div class="logo-image">
            <img src="/assets/logo2.png" class="img-fluid">
      </div>
      <a href="/" class="navbar-brand">Aptsanket</a>
       <button class="navbar-toggler" data-toggle="collapse" data-target="#navLinks" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navLinks">
          <ul class="navbar-nav">
              <li class="nav-item">
                  <a href="/login" class="nav-link">Login</a>
              </li>
          </ul>
      </div>
    </nav>
    <section class="vh-100">
        <div class="container h-100">
          <div class="row d-flex justify-content-center align-items-center">
            <div class="col-lg-9 col-xl-9 mt-5">
              <div class="card text-black mt-5" style="border-radius: 25px;">
                <div class="card-body md-5">
                  <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7 order-2 order-lg-1">
      
                      <p class="text-center h1 fw-bold mb-2">Sign up</p>
                      If you have already registered,
                      <a href="/login" >login here</a>
                      <form class="mx-1 mx-md-4" action="/" method="POST">
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <label class="namef">Your Name</label>
                            <input type="text" id="name" name="name" class="form-control" />
                          </div>
                        </div>
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-envelope fa-lg me-6 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <label class="emailf">Your Email</label>
                            <input type="email" id="username" name="username" class="form-control" />
                          </div>
                        </div>
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-lock fa-lg me-6 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <label class="passwordf" >Password</label>
                            <input type="password" id="password" name="password" class="form-control" />
                          </div>
                        </div>
                        <div class="d-flex flex-row align-items-center mb-3">
                          <div class="form-outline flex-fill mb-0">
                            <label class="agef">Age</label>
                            <input type="number" id="age" name="age" class="form-control" />
                          </div>
                        </div>
                        <label for="gender">Gender </label>
                        <select name="gender" id="gender" required class="form-control mb-3">
                            <option value="">--Select Gender--</option>
                            <option value="Female">Female</option>
                            <option value="Male">Male</option>
                            <option value="Other">Other</option>
                            <option value="NA">NA</option>
                        </select>
    
                        <label for="blood">Blood Group </label>
                        <select name="blood" id="blood" required class="form-control mb-3">
                            <option value="">--Select Blood Group--</option>
                            <option value="A+">A+</option>
                            <option value="B+">B+</option>
                            <option value="O+">O+</option>
                            <option value="AB+">AB+</option>
                            <option value="A-">A-</option>
                            <option value="B-">B-</option>
                            <option value="O-">O-</option>
                            <option value="AB-">AB-</option>
                        </select>
      
                          <div class="d-flex flex-row align-items-center mb-3">
                            <div class="form-outline flex-fill mb-0">
                              <label class="weightf">Weight</label>
                              <input type="number" id="weight" name="weight" class="form-control" />
                            </div>
                          </div>
                          <div class="d-flex flex-row align-items-center mb-3">
                            <div class="form-outline flex-fill mb-0">
                              <label class="heightf">Height</label>
                              <input type="number" id="height" name="height" class="form-control" />
                            </div>
                          </div>
    
                          <div class="d-flex flex-row align-items-center mb-3">
                            <div class="form-outline flex-fill mb-0">
                              <label class="allergiesf">Allergies</label>
                              <input type="text" id="allergies" name="allergies" class="form-control" />
                            </div>
                          </div>
    
                          <div class="d-flex flex-row align-items-center mb-3">
                            <div class="form-outline flex-fill mb-0">
                              <label class="medsf">Medications</label>
                              <input type="text" id="meds" name="meds" class="form-control" />
                            </div>
                          </div>
                          <div class="d-flex flex-row align-items-center mb-3">
                            <div class="form-outline flex-fill mb-0">
                              <label class="bpulf">Blood Pressure upper limit</label>
                              <input type="number" id="bpul" name="bpul" class="form-control" />
                            </div>
                          </div>
                          <div class="d-flex flex-row align-items-center mb-3">
                            <div class="form-outline flex-fill mb-0">
                              <label class="bpllf">Blood Pressure lower limit</label>
                              <input type="number" id="bpll" name="bpll" class="form-control" />
                            </div>
                          </div>
                          <div class="d-flex flex-row align-items-center mb-3">
                            <div class="form-outline flex-fill mb-0">
                              <label class="hrulf">Heart Rate upper limit</label>
                              <input type="number" id="hrul" name="hrul" class="form-control" />
                            </div>
                          </div>
                          <div class="d-flex flex-row align-items-center mb-3">
                            <div class="form-outline flex-fill mb-0">
                              <label class="hrllf">Heart Rate lower limit</label>
                              <input type="number" id="hrll" name="hrll" class="form-control" />
                            </div>
                          </div>
                          <div class="d-flex flex-row align-items-center mb-3">
                            <div class="form-outline flex-fill mb-0">
                              <label class="boulf">Blood Oxygenation upper limit</label>
                              <input type="number" id="boul" name="boul" class="form-control" />
                            </div>
                          </div>
                          <div class="d-flex flex-row align-items-center mb-3">
                            <div class="form-outline flex-fill mb-0">
                              <label class="bollf">Blood Oxygenation lower limit</label>
                              <input type="number" id="boll" name="boll" class="form-control" />
                            </div>
                          </div>
                          <div class="d-flex flex-row align-items-center mb-3">
                            <div class="form-outline flex-fill mb-0">
                              <label class="btulf">Body Temperatue upper limit</label>
                              <input type="number" id="btul" name="btul" class="form-control" />
                            </div>
                          </div>
                          <div class="d-flex flex-row align-items-center mb-3">
                            <div class="form-outline flex-fill mb-0">
                              <label class="btllf">Body Temperatue lower limit</label>
                              <input type="number" id="btll" name="btll" class="form-control" />
                            </div>
                          </div>
                          <div class="d-flex flex-row align-items-center mb-3">
                            <div class="form-outline flex-fill mb-0">
                              <label class="bsulf">Blood Sugar upper limit</label>
                              <input type="number" id="bsul" name="bsul" class="form-control" />
                            </div>
                          </div>
                          <div class="d-flex flex-row align-items-center mb-3">
                            <div class="form-outline flex-fill mb-0">
                              <label class="bsllf">Blood Sugar lower limit</label>
                              <input type="number" id="bsll" name="bsll" class="form-control" />
                            </div>
                          </div>
        
                        <div class="d-flex justify-content-center mx-4">
                          <button class="btn btn-primary w-30 mt-3 me-3 mb-3" >Register</button>
                        </div>
      
                      </form>
      
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
</script>
</body>
</html>