<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,700" rel="stylesheet">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link href= "/public/assets/app.css" rel="stylesheet" type="text/css" />
  <link rel="icon" href="/assets/logo2.png">
  <title>Aptsanket</title>
  <script defer src="http://localhost:3000/socket.io/socket.io.js"></script>
  <script defer src="script.js"></script>
</head>
<body>
    <nav id="mainNavbar" class="navbar navbar-dark navbar-expand-md py-0 fixed-top">
        <div class="logo-image">
            <img src="/assets/logo2.png" class="img-fluid">
      </div>
      <a href="index.html" class="navbar-brand">Aptsanket</a>
      </nav><section class="vh-100">
        <div class="container h-100">
          <div class="row d-flex justify-content-center align-items-center">
            <div class="col-lg-9 col-xl-9 mt-5">
              <div class="card text-black mt-5" style="border-radius: 25px;">
                <div class="card-body md-5">
                  <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-9 col-xl-9 order-2 order-lg-1">
                      <h3>Rooms available:</h3>
  <div id="room-container">
    <% Object.keys(rooms).forEach(room => { %>
      <div><%= room %></div>
      <a href="/<%= room %>">Join</a>
    <% }) %>
  </div>
  <form action="/room" method="POST" onsubmit="return validateForm()">
    <input name="room" type="text" class="form-control" required>
    <button type="submit" class="btn btn-primary w-30 mt-3 me-3 mb-3">New Room</button>
  </form>
</div></div></div></div></div></div></div>
<script>
  function validateForm() {
  var x = document.forms["myForm"]["fname"].value;
  if (x == "") {
    alert("Name must be filled out");
    return false;
  }
}
</script>
</body>
</html>